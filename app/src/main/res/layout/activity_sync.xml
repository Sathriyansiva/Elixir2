<LinearLayout android:id="@+id/linearLayout1"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Sync"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
    </RelativeLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center">
        <TextView
            android:id="@+id/pendingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="You have few items which needs to sync"

            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <Button android:layout_height="50dp" android:layout_weight=".35"
            android:layout_width="wrap_content"
            android:text="sync" android:id="@+id/sync"
            android:layout_gravity="center"
            android:onClick="syncServiceReceiptImages"/>
    </LinearLayout>

</LinearLayout>
