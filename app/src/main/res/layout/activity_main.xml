<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/colorPrimary"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/titleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <TextView
                android:id="@+id/versionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text=""
                android:paddingTop="8dp"
                android:paddingLeft="2dp"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="logoutApp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/welcome_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="@string/welcome_msg"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/msgLayout"
            android:layout_width="fill_parent"
            android:layout_height="275dp"
            android:background="@android:color/white"
            android:orientation="vertical">



            <TextView
                android:id="@+id/g_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="@string/g_news"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/marquee_g_news"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="General News content big text will go here which will scroll" />

            <!--<EditText-->
                <!--android:id="@+id/editText_g_news"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/edit_text_style"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:padding="10dp"-->
                <!--android:editable="false"-->
                <!--android:enabled="false"-->
                <!--android:inputType="text" />-->

            <TextView
                android:id="@+id/p_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="@string/p_news"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/marquee_p_news"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="Personal News content big text will go here which will scroll" />
            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="@string/details"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/marquee_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="Details content big text will go here which will scroll" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/regularUserDashboardLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_attendance"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:text="@string/attendance"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showAttendanceView"/>

            <Button
                android:id="@+id/btn_service_receipt"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="@string/service_receipt"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showServiceReceiptView"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_otw"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary"
                android:text="@string/otw"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showOTWView"/>

            <Button
                android:id="@+id/btn_leads"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="@string/leads"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showLeadsView"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_cms"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary"
                android:text="@string/payment"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showCMSView"/>

            <Button
                android:id="@+id/btn_receive_files"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="@string/receive_files"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showReceiveFilesView"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_executive_report"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:text="@string/report"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:onClick="showExecutiveReportView"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reportUserDashboardLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_entry"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:text="@string/entry"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showEntryView"/>

            <Button
                android:id="@+id/btn_report"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="@string/report"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showReportView"/>

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/agentUserDashboardLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/agentUserDashboardLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_send_policy"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:text="@string/policy"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showPoliciesView"/>

            <Button
                android:id="@+id/btn_payment_entry"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="@string/paymententry"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="showPaymentEntryView"/>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_send_photos"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:text="@string/send_photos"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:onClick="showSendPhotosView"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
                android:orientation="horizontal" >
            <TextView
            android:id="@+id/location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:text="@string/location_msg"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="@string/feed"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:onClick="sendFeedback"
            />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>